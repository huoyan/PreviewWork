<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ApannableStringActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text1"></TextView>
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text2"></TextView>
    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text3"></TextView>
    <TextView
        android:id="@+id/text5"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text4"></TextView>
    <TextView
        android:id="@+id/text6"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text5"></TextView>
    <TextView
        android:id="@+id/text7"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text6"></TextView>
    <TextView
        android:id="@+id/text8"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text7"></TextView>
    <TextView
        android:id="@+id/text9"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text8"></TextView>
    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:lines="3"
        android:gravity="top|left"
        android:hint="这里输入"
        android:padding="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text9"></EditText>
    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:lines="3"
        android:gravity="top|left"
        android:hint="这里输入"
        android:padding="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit1"></EditText>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        app:layout_constraintTop_toBottomOf="@id/edit2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></Button>



</androidx.constraintlayout.widget.ConstraintLayout>