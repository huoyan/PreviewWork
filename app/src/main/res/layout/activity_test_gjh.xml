<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.TestGjhActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/app_test"
        android:textColor="@color/blue"
        android:layout_gravity="center"
        android:textSize="30dp"

        android:layout_marginTop="@dimen/sise20"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:text="@string/app_test2"
        android:textColor="@color/blue"
        android:layout_gravity="center"
        android:textSize="30dp"

        android:layout_marginTop="@dimen/sise20"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/sise20"
        android:layout_gravity="center"
        android:padding="@dimen/sise20"
        android:layout_marginTop="@dimen/sise20"
        android:background="@color/gray"
        android:textColor="@color/white"
        android:onClick="toChange"
        android:text="切换"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/sise20"
        android:layout_gravity="center"
        android:padding="@dimen/sise20"
        android:layout_marginTop="@dimen/sise20"
        android:background="@color/gray"
        android:textColor="@color/white"
        android:onClick="toChange2"
        android:text="切换"
        android:layout_height="wrap_content"></TextView>



</LinearLayout>