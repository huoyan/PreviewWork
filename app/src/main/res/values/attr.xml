<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TitleBar">
        <attr name="show_back" format="boolean" />
        <attr name="title_text" format="string" />
        <attr name="right_text_visible" format="boolean" />
        <attr name="right_img_visible" format="boolean" />
        <attr name="right_img_res" format="reference" />
        <attr name="right_text" format="string" />
    </declare-styleable>



    <attr name="icon" format="reference" />
    <attr name="icon_size" format="dimension" />
    <attr name="icon_padding" format="integer" />
    <declare-styleable name="IconLeftTextView">
        <attr name="icon" />
        <attr name="icon_size" />
        <attr name="icon_padding" />
    </declare-styleable>

    <declare-styleable name="IconFontLeftTextView">
        <attr name="icon_font" format="string"/>
        <attr name="icon_color" format="reference" />
        <attr name="icon_size" />
        <attr name="icon_padding" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:text" />
    </declare-styleable>



</resources>